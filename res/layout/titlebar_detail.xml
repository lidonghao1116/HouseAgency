<?xml version="1.0" encoding="utf-8"?>
<com.eroad.base.DetailTitlebar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailTitlebar"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@color/color_orange"
    tools:ignore="HardcodedText" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/titlebar_left_btn"
            android:gravity="center_vertical"
            android:minWidth="50dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_mid"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_big2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sub_title"
            style="@style/TextMicroWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_title"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/ll_title"
            android:singleLine="true"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_right2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/titlebar_left_btn"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" 
                android:clickable="true"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/right_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_actionbar_bg"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/text_mid"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/titlebar_left_btn"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" 
                android:clickable="true"
                android:visibility="invisible"
                android:descendantFocusability="blocksDescendants">

                <TextView
                    android:id="@+id/right_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_actionbar_bg"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/text_mid"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</com.eroad.base.DetailTitlebar>